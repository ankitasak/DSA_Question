    int rightptr=height.size()-1;
    while(leftptr<rightptr)
    {
            int wt,area,ht;
            wt = rightptr-leftptr;
            ht=min(height[rightptr],height[leftptr]);
            area = wt*ht;
            maxwater = max(area,maxwater);
            if(height[leftptr]<height[rightptr] ? leftptr++:rightptr--);
        
    }

#include <bits/stdc++.h>
using namespace std;
int maxArea(vector<int> &height){
    int maxwater=0;
    int leftptr=0;
    int rightptr=height.size()-1;
    while(leftptr<rightptr)
    {
            int wt,area,ht;
            wt = rightptr-leftptr;
            ht=min(height[rightptr],height[leftptr]);
            area = wt*ht;
            maxwater = max(area,maxwater);
            if(height[leftptr]<height[rightptr] ? leftptr++:rightptr--);
        
    }
    return maxwater;
    
}
int main()
{
   vector<int> height={1,1};
   cout<<maxArea(height);

    return 0;
}
