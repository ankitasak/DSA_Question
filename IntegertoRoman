Q2 .#include <bits/stdc++.h>
using namespace std;
int romanval(char);
int romanToInt(string s) {
        int result=0;
        for(int i=0;i<s.size();i++)
        {
          int  current=romanval(s[i]);
          if(i+1<s.size())
            {
            
                if(current<romanval(s[i+1]))
                {
                    result-=current;
                }
                else
                {
                    result+=current;
                }
            }
            else
            {
                result+=current;
            }
        }
        return result;
    }
    int romanval(char s)
    {
        int val;
        switch(s)
        {
            case 'I': val= 1;break;
            case 'V':val= 5;break;
            case 'X':val= 10;break;
            case 'L': val= 50;break;
            case 'C':val= 100;break;
            case 'D': val= 500;break;
            case 'M':val= 1000;break;
        }
        return val;
        
    }

int main()
{
	string s;
	cin>>s;
	cout<<romanToInt(s);

	return 0;
}
