Q1 .


#include <bits/stdc++.h>
using namespace std;
 string intToRoman(int num) {
        string romanval[13]={"M","CM","D","CD","C","XC","L","XL","X","IX","V","IV","I"};
        int romannum[13]={1000,900,500,400,100,90,50,40,10,9,5,4,1};
        string result="";
        int cnt=0;
        while(13>cnt)
        {
            while(num>romannum[cnt])
            {
                num=num-romannum[cnt];
                result+=romanval[cnt];
            }
            cnt++;
        }
        return result;
    }

int main()
{
	int num;
	cin>>num;
	cout<<intToRoman(num);

	return 0;
}
