Problem 5 : Write a  program to calculate the factorial of a given number. Like for 5 answer should be 120

#include <bits/stdc++.h>
using namespace std;
// 5!=5*4*3*2*1
//1.Basic calculation
int FactiorialNumber(int number)
{
    int cnt=1;
    int result=1;
    while(cnt<=number)
    {
        result=result*cnt;
        cnt++;
    }
    return result;
}


int main()
{
    int number;
    cout<<"Enter the number"<<endl;
    cin>>number;
    cout<<"Factorial of "<<number<<" "<<Factorial;
    
    return 0;
}


//Using recursion;
int FactiorialNumber(int number)
{
    if(number==0)
    {
        return 1;                                           //5*4*3*2*1*1
    }
    else
    {
        return number*FactiorialNumber(number-1); //4*3*2*1
    }
    
}
